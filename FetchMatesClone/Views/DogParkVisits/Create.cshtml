@model FetchMatesClone.Models.DogParkVisit

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Park Visit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DogId" class="control-label"></label>
                <select asp-for="DogId" class ="form-control" asp-items="ViewBag.DogId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ParkName" class="control-label"></label>
                <select asp-for="ParkName" class="form-control">
                    <option>Rancho Bernardo</option>
                    <option>Rancho Penasqiutos</option>
                    <option>Escondido</option>
                    <option>Poway</option>
                    <option>4S Ranch</option>
                    <option>Miramar</option>
                    <option>Mira Mesa</option>
                    <option>Ocean Beach</option>
                    <option>Del Mar Beach</option>
                    <option>Coronado Beach</option>
                </select>
                <span asp-validation-for="ParkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayAndTime" class="control-label"></label>
                <input asp-for="DayAndTime" class="form-control" />
                <span asp-validation-for="DayAndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
